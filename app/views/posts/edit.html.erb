<div class="card">
    <div class="card-header">
      投稿内容編集
    </div>
    <%= form_with(model: @post, local: true) do |form| %>
    <div class="card-body">
      <h5 class="card-title">タイトル：</h5>
      <div class="form-group">
        <%= form.text_field :title, placeholder: "タイトル", class: "form-control" %>
      </div>
      <h5 class="card-title">動画の概要：</h5>
      <div class="form-group">
        <%= form.text_area :body, placeholder: "動画の説明", class: "form-control", size: "60x15" %>
      </div>
      <div class="form-group">
        <div class="custom-file">
          <%= form.file_field :video, class: "custom-file-input", id: "customFile"%>
          <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
      </div>
      <%= form.submit class: "btn btn-primary"%>
    </div>
    <% end %>
  </div>